{
  "name": "@colliers-international/colliers-map",
  "description": "Colliers React components for MapLibre GL JS and Mapbox GL JS",
  "version": "0.0.1",
  "keywords": [
    "mapbox",
    "mapbox-gl",
    "react",
    "react-mapbox-gl",
    "react mapbox"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/visgl/react-map-gl.git"
  },
  "license": "MIT",
  "type": "module",
  "main": "./index.cjs",
  "module": "./index.js",
  "types": "./index.d.ts",
  "files": [
    "src",
    "dist",
    "maplibre",
    "README.md"
  ],
  "scripts": {
    "build": "rimraf ./dist && tsc",
    "build-publish": "rimraf ./dist && tsup --config tsup.config.ts",
    "docs": "typedoc",
    "publish-package": "pnpm run build-publish && cp package.json ./dist && npm publish ./dist"
  },
  "dependencies": {
    "@maplibre/maplibre-gl-style-spec": "^19.2.1",
    "@types/mapbox-gl": ">=1.0.0",
    "tsup": "^8.3.5",
    "typedoc": "^0.27.5",
    "typedoc-plugin-markdown": "^4.3.3"
  },
  "peerDependencies": {
    "mapbox-gl": ">=1.13.0",
    "maplibre-gl": ">=1.13.0",
    "react": ">=16.3.0",
    "react-dom": ">=16.3.0"
  },
  "peerDependenciesMeta": {
    "mapbox-gl": {
      "optional": true
    },
    "maplibre-gl": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/react": "^16.0.0",
    "jsdom": "^16.5.0",
    "mapbox-gl": "^2.14.0",
    "maplibre-gl": "^2.4.0",
    "ocular-dev-tools": "2.0.0-alpha.15",
    "pre-commit": "^1.2.2",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-test-renderer": "^18.0.0",
    "rimraf": "^6.0.1",
    "typescript": "^4.0.0"
  },
  "pre-commit": [
    "test-fast"
  ],
  "volta": {
    "node": "18.20.5",
    "yarn": "1.22.22"
  }
}
